<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>Subject</param-name>
        <param-value>ICS2608</param-value>
    </context-param>
    <context-param>
        <param-name>Section</param-name>
        <param-value>2CSC</param-value>
    </context-param>
    <context-param>
        <param-name>Name</param-name>
        <param-value>Dayao, Esguerra, Gulifardo</param-value>
    </context-param>
    <listener>
        <listener-class>
            controllers.DateContextListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>app</param-value>
	</init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>app</param-value>
	</init-param>
        <init-param>
            <param-name>key</param-name>
            <param-value>2CSCMP3GR0UP10 ?</param-value>
        </init-param>
        <init-param>
            <param-name>cipher</param-name>
            <param-value>AES/ECB/PKCS5Padding</param-value>
        </init-param>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
	</init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/UserDB</param-value>
	</init-param>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>controllers.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <!-- Error page declarations -->
    <error-page>
        <error-code>404</error-code>
        <location>/error_4.jsp</location>
    </error-page>
</web-app>
